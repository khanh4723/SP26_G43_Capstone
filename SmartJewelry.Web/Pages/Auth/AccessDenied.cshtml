@page
@model SmartJewelry.Web.Pages.Auth.AccessDeniedModel
@{
    ViewData["Title"] = "Truy cập bị từ chối";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="auth-branding">
        <div class="branding-content">
            <div class="brand-logo">
                <i class="fas fa-gem"></i>
            </div>
            <h1 class="brand-name">Smart Jewelry</h1>
            <p class="brand-tagline">Trang sức & Đá quý cao cấp</p>
        </div>
    </div>

    <div class="auth-form-panel">
        <div class="auth-form-container">
            <div class="auth-header">
                <div class="success-icon error-icon">
                    <i class="fas fa-ban"></i>
                </div>
                <h1>Truy cập bị từ chối</h1>
                <p>Bạn không có quyền truy cập vào trang này</p>
            </div>

            <div class="alert alert-error">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Vui lòng liên hệ quản trị viên nếu bạn cho rằng đây là lỗi.</span>
            </div>

            <div style="display: flex; flex-direction: column; gap: 1rem;">
                <a href="/" class="btn btn-primary btn-block">
                    <i class="fas fa-home"></i>
                    Về trang chủ
                </a>
                <a href="/Auth/Logout" class="btn btn-outline btn-block">
                    <i class="fas fa-sign-out-alt"></i>
                    Đăng nhập tài khoản khác
                </a>
            </div>
        </div>
    </div>
</div>
