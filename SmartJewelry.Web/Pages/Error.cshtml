@page
@model SmartJewelry.Web.Pages.ErrorModel
@{
    ViewData["Title"] = "Lỗi";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="auth-branding">
        <div class="branding-content">
            <div class="brand-logo">
                <i class="fas fa-gem"></i>
            </div>
            <h1 class="brand-name">Smart Jewelry</h1>
            <p class="brand-tagline">Trang sức & Đá quý cao cấp</p>
        </div>
    </div>

    <div class="auth-form-panel">
        <div class="auth-form-container">
            <div class="auth-header">
                <div class="success-icon error-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h1>Đã xảy ra lỗi</h1>
                <p>Xin lỗi, đã có lỗi xảy ra khi xử lý yêu cầu của bạn</p>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <span>Request ID: <code style="background: rgba(255,255,255,0.1); padding: 2px 8px; border-radius: 4px;">@Model.RequestId</code></span>
                </div>
            }

            <a href="/" class="btn btn-primary btn-block">
                <i class="fas fa-home"></i>
                Về trang chủ
            </a>
        </div>
    </div>
</div>
