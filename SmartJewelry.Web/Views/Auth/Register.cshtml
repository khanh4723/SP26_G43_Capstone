@model RegisterViewModel
@{
    ViewData["Title"] = "Ðang ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Jewelry</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #fafaf9;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #27251F;
        }

        .auth-wrapper {
            max-width: 450px;
            width: 100%;
            background: #ffffff;
            border: 1px solid #e7e5e4;
            padding: 48px 40px;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo {
            margin-bottom: 24px;
        }

        .logo img {
            width: 160px;
            height: 50px;
        }

        .auth-title {
            font-size: 28px;
            font-weight: 600;
            color: #27251F;
            margin-bottom: 8px;
            letter-spacing: -0.5px;
        }

        .auth-subtitle {
            font-size: 14px;
            color: #71706c;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 12px;
            font-weight: 600;
            color: #27251F;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.8px;
        }

        .form-control {
            width: 100%;
            padding: 14px 16px;
            font-size: 14px;
            border: 1px solid #e7e5e4;
            border-radius: 4px;
            background: #ffffff;
            color: #27251F;
            transition: all 0.2s ease;
            outline: none;
        }

        .form-control:focus {
            border-color: #27251F;
        }

        .form-control.is-invalid {
            border-color: #ef4444;
        }

        .text-danger {
            color: #ef4444;
            font-size: 12px;
            margin-top: 6px;
            display: block;
        }

        .btn {
            width: 100%;
            padding: 16px 24px;
            font-size: 13px;
            font-weight: 600;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .btn:disabled:hover {
            transform: none;
        }

        .btn-primary {
            background: #27251F;
            color: #ffffff;
            border: 2px solid #27251F;
            margin-bottom: 16px;
        }

        .btn-primary:hover {
            background: #3a3832;
            border-color: #3a3832;
            transform: translateY(-1px);
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 32px 0;
            color: #71706c;
            font-size: 13px;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e7e5e4;
        }

        .divider::before {
            margin-right: 16px;
        }

        .divider::after {
            margin-left: 16px;
        }

        .btn-social {
            background: #ffffff;
            color: #27251F;
            border: 1px solid #e7e5e4;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

        .btn-social:hover {
            background: #fafaf9;
            border-color: #27251F;
        }

        .btn-social svg {
            width: 20px;
            height: 20px;
        }

        .auth-footer {
            text-align: center;
            margin-top: 32px;
            padding-top: 32px;
            border-top: 1px solid #e7e5e4;
        }

        .auth-footer p {
            font-size: 14px;
            color: #71706c;
        }

        .auth-footer a {
            color: #27251F;
            font-weight: 600;
            text-decoration: none;
        }

        .auth-footer a:hover {
            text-decoration: underline;
        }

        .alert {
            padding: 14px 16px;
            margin-bottom: 20px;
            border-left: 4px solid;
            font-size: 14px;
        }

        .alert-danger {
            background: #fef2f2;
            border-color: #ef4444;
            color: #991b1b;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }

        .back-home {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #71706c;
            text-decoration: none;
            font-size: 14px;
            margin-bottom: 24px;
            transition: color 0.2s;
        }

        .back-home:hover {
            color: #27251F;
        }

        .back-home svg {
            width: 16px;
            height: 16px;
        }        
    </style>
</head>
<body>
    <div class="auth-wrapper">
        <a href="/" class="back-home">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Quay v? trang ch?
        </a>
        
        <div class="auth-header">
            <div class="logo">
                <img src="~/images/image-Photoroom (1).png" />
            </div>
            <h1 class="auth-title">T?o tài kho?n</h1>
            <p class="auth-subtitle">Tr? thành thành viên Smart Jewelry</p>
        </div>
        @if (TempData["ErrorMessage"] != null) { <div class="alert alert-danger">@TempData["ErrorMessage"]</div> }
        <form asp-action="Register" method="post">
            <div class="form-group"><label asp-for="FullName" class="form-label">H? và tên</label><input asp-for="FullName" class="form-control" placeholder="Nh?p h? và tên" /><span asp-validation-for="FullName" class="text-danger"></span></div>
            <div class="form-group"><label asp-for="Email" class="form-label">Email</label><input asp-for="Email" class="form-control" placeholder="email@example.com" /><span asp-validation-for="Email" class="text-danger"></span></div>
            <div class="form-row">
                <div class="form-group"><label asp-for="Password" class="form-label">M?t kh?u</label><input asp-for="Password" type="password" class="form-control" placeholder="••••••••" /><span asp-validation-for="Password" class="text-danger"></span></div>
                <div class="form-group"><label asp-for="ConfirmPassword" class="form-label">Xác nh?n</label><input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" /><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
            </div>
            <button type="submit" class="btn btn-primary">Ðang ký</button>
        </form>
        <div class="divider">Ho?c dang ký v?i</div>
        <form asp-controller="ExternalAuth" asp-action="Login" method="get">
            <input type="hidden" name="provider" value="Google" />
            <input type="hidden" name="returnUrl" value="/" />
            <button type="submit" class="btn btn-social">
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/></svg>
                Ðang ký v?i Google
            </button>
        </form>

        <form asp-controller="ExternalAuth" asp-action="Login" method="get">
            <input type="hidden" name="provider" value="Facebook" />
            <input type="hidden" name="returnUrl" value="/" />
            <button type="submit" class="btn btn-social">
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" fill="#1877F2"/>
                </svg>
                Ðang ký v?i Facebook
            </button>
        </form>
        <div class="auth-footer"><p>Ðã có tài kho?n? <a asp-action="Login">Ðang nh?p ngay</a></p></div>
    </div>
    <script src="~/js/jquery-1.11.0.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
