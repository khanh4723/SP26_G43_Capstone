@{
    ViewData["Title"] = "Smart Jewelry - Trang Sức Cao Cấp";
}

<style>
    .cta-badge {
        display: inline-block;
        background: #704204;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        margin-left: 0.5rem;
    }
</style>

<!-- Billboard Section with modified CTA for guests -->
<section id="billboard" class="overflow-hidden">
    <div class="swiper main-swiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="banner-item align-content-center"
                                 style="background-image: url('@Url.Content("~/images/banner-image1.jpg")'); background-repeat: no-repeat; background-position: right; height: 850px;">
                                <div class="banner-content padding-large">
                                    <h2 class="display-2 text-capitalize text-dark pb-2">
                                        Trang Sức Cao Cấp
                                        
                                    </h2>
                                    <p>
                                        Khám phá bộ sưu tập trang sức độc đáo, được chế tác tinh xảo 
                                        với chất lượng vượt trội và thiết kế sang trọng. 
                                        <strong>Đăng ký ngay để trải nghiệm mua sắm!</strong>
                                    </p>
                                    <a asp-controller="Auth" asp-action="Register" class="btn btn-medium btn-arrow position-relative mt-3">
                                        <span class="text-capitalize">Đăng ký ngay</span>
                                        <svg class="arrow-right position-absolute" width="18" height="20">
                                            <use xlink:href="#arrow-right"></use>
                                        </svg>
                                    </a>
                                    <a asp-controller="Auth" asp-action="Login" class="btn btn-medium btn-arrow outline-dark position-relative mt-3 ms-2">
                                        <span class="text-capitalize">Đăng nhập</span>
                                        <svg class="arrow-right position-absolute" width="18" height="20">
                                            <use xlink:href="#arrow-right"></use>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="banner-item align-content-center"
                                 style="background-image: url('@Url.Content("~/images/banner-image2.jpg")'); background-repeat: no-repeat; background-position: right; height: 850px;">
                                <div class="banner-content padding-large">
                                    <h2 class="display-2 text-capitalize text-dark pb-2">Thiết Kế Độc Đáo</h2>
                                    <p>
                                        Mỗi món trang sức là một tác phẩm nghệ thuật, kết hợp giữa nét cổ điển và hiện đại.
                                        <strong>Tạo tài khoản để xem bộ sưu tập đầy đủ!</strong>
                                    </p>
                                    <a asp-controller="Auth" asp-action="Register" class="btn btn-medium btn-arrow position-relative mt-3">
                                        <span class="text-capitalize">Tạo tài khoản</span>
                                        <svg class="arrow-right position-absolute" width="18" height="20">
                                            <use xlink:href="#arrow-right"></use>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="banner-item align-content-center"
                                 style="background-image: url('@Url.Content("~/images/banner-image3.jpg")'); background-repeat: no-repeat; background-position: right; height: 850px;">
                                <div class="banner-content padding-large">
                                    <h2 class="display-2 text-capitalize text-dark pb-2">Ưu Đãi Đặc Biệt</h2>
                                    <p>
                                        Nhận điểm thưởng mỗi lần mua hàng, giao hàng miễn phí, bảo hành trọn đời.
                                        <strong>Đăng ký để nhận ngay ưu đãi!</strong>
                                    </p>
                                    <a asp-controller="Auth" asp-action="Register" class="btn btn-medium btn-arrow position-relative mt-3">
                                        <span class="text-capitalize">Nhận ưu đãi</span>
                                        <svg class="arrow-right position-absolute" width="18" height="20">
                                            <use xlink:href="#arrow-right"></use>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="swiper-pagination position-absolute"></div>
    </section>

@await Html.PartialAsync("_CompanyServices")

<section id="about-us" class="padding-large pt-0">
    <div class="container-fluid">
        <div class="row align-items-center justify-content-between g-5">
            <div class="col-md-6 offset-md-3">
                <div class="detail">
                    <div class="display-header text-center">
                        <h2 class="display-2 text-capitalize text-dark pb-2">About Us</h2>
                        <p class="pb-3">
                            Smart Jewelry mang đến cho bạn những món trang sức cao cấp với chất lượng vượt trội.
                            Mỗi sản phẩm đều được chế tác tỉ mỉ, kết hợp giữa nghệ thuật truyền thống và công nghệ hiện đại.
                        </p>
                        <p class="pb-3">
                            <strong>Đăng ký tài khoản ngay hôm nay</strong> để trải nghiệm mua sắm trang sức đẳng cấp 
                            với nhiều ưu đãi hấp dẫn!
                        </p>
                        <a asp-controller="Auth" asp-action="Register" class="btn btn-medium btn-arrow outline-dark position-relative mt-3">
                            <span class="text-capitalize">Đăng ký ngay</span>
                            <svg class="arrow-right position-absolute" width="18" height="20">
                                <use xlink:href="#arrow-right"></use>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_Subscribe")
