@model SmartJewelry.Web.ViewModels.Profile.ProfileViewModel
@{
    ViewData["Title"] = "Hồ sơ của tôi";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="avatar-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; border-radius: 50%; font-size: 2rem; font-weight: bold;">
                                @Model.Username.Substring(0, 1).ToUpper()
                            </div>
                            <h5 class="mt-3 mb-1">@Model.Username</h5>
                            <p class="text-muted small">@Model.Email</p>
                        </div>
                        
                        <nav class="nav flex-column">
                            <a class="nav-link active" href="@Url.Action("Index", "Profile")">
                                <i class="bi bi-person"></i> Thông tin cá nhân
                            </a>
                            <a class="nav-link" href="@Url.Action("Addresses", "Profile")">
                                <i class="bi bi-geo-alt"></i> Địa chỉ của tôi
                            </a>
                            <a class="nav-link" href="@Url.Action("ChangePassword", "Profile")">
                                <i class="bi bi-lock"></i> Đổi mật khẩu
                            </a>
                            <hr>
                            <a class="nav-link text-danger" href="@Url.Action("Logout", "Auth")">
                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                            </a>
                        </nav>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Thông tin cá nhân</h5>
                            <a href="@Url.Action("Edit", "Profile")" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil"></i> Chỉnh sửa
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Tên người dùng:</div>
                            <div class="col-md-8 fw-semibold">@Model.Username</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Email:</div>
                            <div class="col-md-8">
                                @Model.Email
                                @if (Model.EmailVerified)
                                {
                                    <span class="badge bg-success ms-2">Đã xác thực</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning ms-2">Chưa xác thực</span>
                                }
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Số điện thoại:</div>
                            <div class="col-md-8">@(Model.Phone ?? "Chưa cập nhật")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Ngày sinh:</div>
                            <div class="col-md-8">@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Giới tính:</div>
                            <div class="col-md-8">
                                @(Model.Gender == "male" ? "Nam" : Model.Gender == "female" ? "Nữ" : Model.Gender == "other" ? "Khác" : "Chưa cập nhật")
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Vai trò:</div>
                            <div class="col-md-8">
                                <span class="badge bg-info">@Model.Role</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Ngày đăng ký:</div>
                            <div class="col-md-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 text-muted">Đăng nhập lần cuối:</div>
                            <div class="col-md-8">@(Model.LastLogin?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có")</div>
                        </div>
                    </div>
                </div>

                @if (Model.CustomerId.HasValue)
                {
                    <div class="card shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Thông tin khách hàng</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Hạng thành viên:</div>
                                <div class="col-md-8">
                                    @{
                                        var tierClass = Model.CustomerTier switch
                                        {
                                            "bronze" => "bg-secondary",
                                            "silver" => "bg-secondary",
                                            "gold" => "bg-warning",
                                            "platinum" => "bg-primary",
                                            _ => "bg-secondary"
                                        };
                                        var tierText = Model.CustomerTier switch
                                        {
                                            "bronze" => "Đồng",
                                            "silver" => "Bạc",
                                            "gold" => "Vàng",
                                            "platinum" => "Bạch Kim",
                                            _ => Model.CustomerTier
                                        };
                                    }
                                    <span class="badge @tierClass text-uppercase">@tierText</span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 text-muted">Điểm tích lũy:</div>
                                <div class="col-md-8">
                                    <span class="fs-5 text-primary fw-bold">@Model.LoyaltyPoints</span> điểm
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
