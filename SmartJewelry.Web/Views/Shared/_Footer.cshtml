<style>
    #footer {
        background: #F5F5F5;
        color: #ffffff;
        padding: 60px 0 0;
        font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    #footer .footer-top {
        padding-bottom: 40px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    #footer .footer-logo {
        width: 160px;
        height: 50px;
        margin-bottom: 24px;
    }

    #footer .footer-description {
        color: #b8b6b3;
        font-size: 14px;
        line-height: 1.7;
        margin-bottom: 0;
    }

    #footer .widget-title {
        font-size: 16px;
        font-weight: 600;
        color: black;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    #footer .menu-list {
        padding: 0;
        margin: 0;
    }

    #footer .menu-list li {
        margin-bottom: 12px;
    }

    #footer .menu-list li:last-child {
        margin-bottom: 0;
    }

    #footer .menu-list a,
    #footer .social-links a,
    #footer .contact-item a {
        color: #b8b6b3;
        text-decoration: none;
        font-size: 14px;
        transition: color 0.3s ease;
    }

    #footer .menu-list a:hover,
    #footer .social-links a:hover,
    #footer .contact-item a:hover {
        color: #ffffff;
    }

    #footer .contact-item p {
        color: #b8b6b3;
        font-size: 14px;
        margin-bottom: 12px;
        line-height: 1.6;
    }

    #footer .contact-item p:last-child {
        margin-bottom: 0;
    }

    #footer .social-icons {
        display: flex;
        gap: 16px;
        margin-top: 20px;
    }

    #footer .social-icons a {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        color: #b8b6b3;
        transition: all 0.3s ease;
    }

    #footer .social-icons a:hover {
        background: #ffffff;
        color: #27251F;
        border-color: #ffffff;
    }

    #footer .footer-bottom {
        padding: 30px 0;
        text-align: center;
    }

    #footer .copyright {
        color: #71706c;
        font-size: 13px;
        margin: 0;
    }

    @@media (max-width: 768px) {
        #footer {
            padding: 40px 0 0;
        }

        #footer .footer-col {
            margin-bottom: 30px;
        }

        #footer .footer-bottom {
            padding: 20px 0;
        }
    }
</style>

