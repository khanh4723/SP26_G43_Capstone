<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Jewelry Staff</title>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/staff.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<div class="staff-shell">
    <aside class="staff-sidebar">
        <div class="brand">
            <div class="brand__logo"><i class="bi bi-gem"></i></div>
            <div class="brand__text">
                <div class="brand__name">Smart Jewelry</div>
                <div class="brand__sub">Sales Staff</div>
            </div>
        </div>

        <nav class="staff-nav">
            <a class="staff-nav__item @(ViewContext.RouteData.Values["action"]?.ToString()=="Index" ? "active" : "")" asp-controller="SalesStaff" asp-action="Index">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
            <a class="staff-nav__item @(ViewContext.RouteData.Values["action"]?.ToString()=="Orders" ? "active" : "")" asp-controller="SalesStaff" asp-action="Orders">
                <i class="bi bi-receipt"></i>
                <span>Orders</span>
            </a>
        </nav>

        <div class="staff-sidebar__bottom">
            <a class="staff-nav__item" asp-controller="Auth" asp-action="Logout">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
        </div>
    </aside>

    <main class="staff-main">
        <header class="staff-topbar">
            <div class="staff-topbar__left">
                <span class="staff-topbar__title">@ViewData["Title"]</span>
            </div>
            <div class="staff-topbar__right">
                <div class="staff-user">
                    <i class="bi bi-person-circle"></i>
                    <span>@User.Identity?.Name</span>
                </div>
            </div>
        </header>

        <section class="staff-content">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
            }
            @RenderBody()
        </section>
    </main>
</div>

<script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
