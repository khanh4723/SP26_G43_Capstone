    }

        .account-dropdown .body {
            display: flex;
            flex-direction: column;
            gap: 12px;
            margin-bottom: 15px;
        }

            .account-dropdown .body .btn {
                display: inline-block;
                padding: 12px 24px;
                font-size: 14px;
                font-weight: 600;
                text-align: center;
                text-decoration: none;
                border-radius: 4px;
                cursor: pointer;
                transition: all 0.3s ease;
                border: none;
                text-transform: uppercase;
